<section id="order-flowers">
  <h1>Please select the flowers</h1>

  <%= form_for(@order_flower) do |f| %>
    <fieldset>
      <ul>
        <% @flowers.each do |flower| %>
            <li>
              <%= check_box_tag('flower_id[]', flower.id) %>
              <%= image_tag(flower.image, size: "100x100") %>
              <p>Name: <%= flower.name %></p>
              <p>Color: <%= flower.color %></p>
              <p>Origin: <%= flower.origin %></p>
              <p>Price: <%= flower.price %> Euro</p>
            
              <%= label_tag :quantity, "Quantity:" %>
              <%= number_field_tag 'quantity[]', 0, within: 0..4 %>

            </li>
        <% end %>
      </ul>
      <p>
        <%= f.submit 'Confirm' %>
        <%= link_to "Cancel" %>
      </p>
    </fieldset>
  <% end %> 
</section>

<% content_for(:side) %>
<% if current_user %>
  <h1>Your Orders</h1>

  <% current_orders.each do |order| %>
    <% order.pots.each_with_index do |pot, i| %>
    <ul>
      <li>Pot: 
        <%= pot.name %>
        <%= pot.dimensions %>
        <%= pot.material %>
        <%= pot.price %>

        <p>Flowers:
        <% order.order_pots[i].flowers.each do |flower| %>
          <%= flower.name %>
        <% end %>
        </p>
      </li>
    </ul>
    <% end %>
  <% end %>
<% end %>