<section id="user-profile">
  <h1>Your Profile</h1>

  <header>
    <h2><%= @user.email %></h2>
  </header>

  <h1>Your Orders</h1>

  <ul class="flex">
  <% current_orders.each_with_index do |order, j| %>
    <% order.pots.each_with_index do |pot, i| %>
      <li>
        <div>
          Order Id: <%= order.id %>
        </div>
        <div class="flex f-column">Pot
          <%= image_tag(pot.image, size: "100x100") %>
          <%= pot.name %> <br>
          <%= pot.dimensions %>
          <%= pot.material %>
          <%= pot.price %>
        </div>

        <div class="flex f-column">Flowers:
        <% order.order_pots[i].flowers.each do |flower| %>
          <%= image_tag(flower.image, size: "100x100") %>
          <%= flower.name %>
        <% end %>
        </div>

        <p>Order Price: <%= current_orders_individual_price[j] %> Euro</p>
      </li>
    <% end %>
  <% end %>

  </ul>
  <h3>Total Price <%= current_orders_total_price %> Euro</h3>
</section>





