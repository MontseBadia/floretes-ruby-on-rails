<section id="order-pots">
  <h1>Please select a pot</h1>

  <%= form_tag(display_new_order_pot_path) do |f| %>
    <fieldset>
      <ul>
        <%= render partial: 'pots/new_pot', collection: @pots, as: :pot %>
      </ul>
      <p>
        <%= submit_tag 'Confirm' %>
        <%= link_to 'Cancel', root_path %>
      </p>
    </fieldset>
  <% end %>
</section>

<% content_for(:side) do %>
  <%= render partial: 'carts/side_cart' %>
<% end %>